{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container">
    <h1>Toutes les séries : </h1>
    {% for program in programs %}

        <div class="movie">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path('wild_program', { 'slug': program.title | lower | replace({" ": "-"})})   }}">
                voir plus.
            </a>
        </div>

    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>
    <div class ="form">
        <p>formulaire</p>
    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
        <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}
    </div>



{% endblock %}
     {% block back %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
